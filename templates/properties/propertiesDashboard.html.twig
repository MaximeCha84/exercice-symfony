{% extends 'base.html.twig' %}

{% block title %}
	Liste des proprétés
{% endblock %}

{% block body %}

	<div class="container mt-3">

		<h1>Liste des propriétés</h1>

		<div class="Infos py-3">
			<h2 class='text-decoration-underline mb-3'>Informations</h2>
			<div class="row">
				<div class="col">
					<p>
						<span class="fw-semibold">Nom :</span>
						{{user.lastName}}</p>
					<p>
						<span class="fw-semibold">Prénom :</span>
						{{ user.firstName}}</p>
					<p>
						<span class="fw-semibold">Email :</span>
						{{user.email}}</p>
				</div>
				<div class="col">
					<p>
						<span class="fw-semibold">Adresse :</span>
						{{ user.adress }}</p>
					<p>
						<span class="fw-semibold">Téléphone :</span>
						{{ user.phoneNumber }}</p>
					<p>
						<span class="fw-semibold">Date de naissance :</span>
						{{ user.birthDate|date("d/m/Y") }}</p>
				</div>

			</div>
		</div>

		<h2 class="text-decoration-underline mb-3">Propriétés</h2>
		<table class="table table-striped table-hover text-center">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Valeur</th>
					<th scope="col">Type</th>
				</tr>
			</thead>
			<tbody>
				{% for property in properties %}
					<tr>
						<td>{{property.name}}</td>
						<td>{{property.value}}</td>
						<td>{{property.type}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
